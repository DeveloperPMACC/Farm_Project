<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-2 bg-dark sidebar">
        <div class="d-flex flex-column p-3 text-white">
          <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <i class="fas fa-robot me-2"></i>
            <span class="fs-4">View Farm</span>
          </a>
          <hr>
          <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
              <a href="/" class="nav-link active" aria-current="page">
                <i class="fas fa-chart-line me-2"></i>
                Dashboard
              </a>
            </li>
            <li>
              <a href="/devices" class="nav-link text-white">
                <i class="fas fa-mobile-alt me-2"></i>
                Dispositivos
              </a>
            </li>
            <li>
              <a href="/tasks" class="nav-link text-white">
                <i class="fas fa-tasks me-2"></i>
                Tareas
              </a>
            </li>
            <li>
              <a href="/stats" class="nav-link text-white">
                <i class="fas fa-chart-bar me-2"></i>
                Estadísticas
              </a>
            </li>
            <li>
              <a href="#" class="nav-link text-white" data-bs-toggle="modal" data-bs-target="#settingsModal">
                <i class="fas fa-cog me-2"></i>
                Configuración
              </a>
            </li>
          </ul>
        </div>
      </div>
      
      <!-- Main Content -->
      <div class="col-md-10 main-content">
        <div class="p-3">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Dashboard</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              <button type="button" class="btn btn-sm btn-primary me-2" data-bs-toggle="modal" data-bs-target="#newTaskModal">
                <i class="fas fa-plus me-1"></i> Nueva Tarea
              </button>
              <button type="button" class="btn btn-sm btn-outline-secondary" id="refreshButton">
                <i class="fas fa-sync-alt me-1"></i> Actualizar
              </button>
            </div>
          </div>
          
          <!-- Status Cards -->
          <div class="row mb-4">
            <div class="col-md-3">
              <div class="card bg-primary text-white">
                <div class="card-body">
                  <h5 class="card-title"><i class="fas fa-mobile-alt me-2"></i> Dispositivos</h5>
                  <h2 class="display-6" id="deviceCount">0</h2>
                  <p class="card-text">Dispositivos activos</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-success text-white">
                <div class="card-body">
                  <h5 class="card-title"><i class="fas fa-check-circle me-2"></i> Completadas</h5>
                  <h2 class="display-6" id="completedCount">0</h2>
                  <p class="card-text">Tareas completadas</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-warning text-dark">
                <div class="card-body">
                  <h5 class="card-title"><i class="fas fa-clock me-2"></i> Pendientes</h5>
                  <h2 class="display-6" id="pendingCount">0</h2>
                  <p class="card-text">Tareas en espera</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card bg-info text-white">
                <div class="card-body">
                  <h5 class="card-title"><i class="fas fa-chart-pie me-2"></i> Tasa de Éxito</h5>
                  <h2 class="display-6" id="successRate">0%</h2>
                  <p class="card-text">En las últimas 24h</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Devices and Tasks Sections -->
          <div class="row mb-4">
            <!-- Devices Section -->
            <div class="col-md-6">
              <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h5><i class="fas fa-mobile-alt me-2"></i> Dispositivos Conectados</h5>
                  <button class="btn btn-sm btn-outline-primary" id="scanDevicesBtn">
                    <i class="fas fa-search me-1"></i> Escanear
                  </button>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-sm">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Modelo</th>
                          <th>Estado</th>
                          <th>Batería</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody id="devicesList">
                        <tr>
                          <td colspan="5" class="text-center">Cargando dispositivos...</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Tasks Section -->
            <div class="col-md-6">
              <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                  <h5><i class="fas fa-tasks me-2"></i> Tareas Recientes</h5>
                  <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#newTaskModal">
                    <i class="fas fa-plus me-1"></i> Nueva
                  </button>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-sm">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>App</th>
                          <th>Estado</th>
                          <th>Creada</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>
                      <tbody id="tasksList">
                        <tr>
                          <td colspan="5" class="text-center">Cargando tareas...</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Activity Logs Section -->
          <div class="row mb-4">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <h5><i class="fas fa-history me-2"></i> Registros de Actividad</h5>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-sm">
                      <thead>
                        <tr>
                          <th>Timestamp</th>
                          <th>Dispositivo</th>
                          <th>Acción</th>
                          <th>Estado</th>
                        </tr>
                      </thead>
                      <tbody id="logsList">
                        <tr>
                          <td colspan="4" class="text-center">Cargando actividades...</td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- New Task Modal -->
  <div class="modal fade" id="newTaskModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Nueva Tarea</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="newTaskForm">
            <div class="mb-3">
              <label for="appPackage" class="form-label">Aplicación</label>
              <select class="form-select" id="appPackage" required>
                <option value="" selected disabled>Seleccionar aplicación</option>
                <% config.apps.forEach(app => { %>
                  <option value="<%= app.packageName %>"><%= app.appName %></option>
                <% }); %>
              </select>
            </div>
            <div class="mb-3">
              <label for="videoUrls" class="form-label">URLs/Keywords (separadas por coma)</label>
              <input type="text" class="form-control" id="videoUrls" required>
              <div class="form-text">Términos de búsqueda o URLs para interactuar</div>
            </div>
            <div class="mb-3">
              <label for="priority" class="form-label">Prioridad</label>
              <input type="range" class="form-range" min="1" max="10" value="5" id="priority">
              <div class="d-flex justify-content-between">
                <span>Baja</span>
                <span id="priorityValue">5</span>
                <span>Alta</span>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="saveTaskBtn">Guardar</button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Settings Modal -->
  <div class="modal fade" id="settingsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Configuración</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <ul class="nav nav-tabs" id="settingsTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab">General</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="actions-tab" data-bs-toggle="tab" data-bs-target="#actions" type="button" role="tab">Acciones</button>
            </li>
            <li class="nav-item" role="presentation">
              <button class="nav-link" id="advanced-tab" data-bs-toggle="tab" data-bs-target="#advanced" type="button" role="tab">Avanzado</button>
            </li>
          </ul>
          <div class="tab-content p-3" id="settingsTabContent">
            <div class="tab-pane fade show active" id="general" role="tabpanel">
              <h6>Configuración General</h6>
              <div class="mb-3">
                <label for="refreshInterval" class="form-label">Intervalo de actualización (segundos)</label>
                <input type="number" class="form-control" id="refreshInterval" value="5" min="1">
              </div>
              <div class="mb-3">
                <label for="maxConcurrentTasks" class="form-label">Máximo de tareas concurrentes</label>
                <input type="number" class="form-control" id="maxConcurrentTasks" value="10" min="1">
              </div>
            </div>
            <div class="tab-pane fade" id="actions" role="tabpanel">
              <h6>Configuración de Acciones</h6>
              <div class="mb-3">
                <label for="viewTimeMin" class="form-label">Tiempo mínimo de visualización (segundos)</label>
                <input type="number" class="form-control" id="viewTimeMin" value="30" min="1">
              </div>
              <div class="mb-3">
                <label for="viewTimeMax" class="form-label">Tiempo máximo de visualización (segundos)</label>
                <input type="number" class="form-control" id="viewTimeMax" value="120" min="1">
              </div>
              <div class="mb-3">
                <label for="likeProbability" class="form-label">Probabilidad de dar like (0-1)</label>
                <input type="number" class="form-control" id="likeProbability" value="0.5" min="0" max="1" step="0.1">
              </div>
              <div class="mb-3">
                <label for="commentProbability" class="form-label">Probabilidad de comentar (0-1)</label>
                <input type="number" class="form-control" id="commentProbability" value="0.2" min="0" max="1" step="0.1">
              </div>
            </div>
            <div class="tab-pane fade" id="advanced" role="tabpanel">
              <h6>Configuración Avanzada</h6>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="enableAntiDetection" checked>
                <label class="form-check-label" for="enableAntiDetection">Activar anti-detección</label>
              </div>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="randomizeUserAgent" checked>
                <label class="form-check-label" for="randomizeUserAgent">Aleatorizar User-Agent</label>
              </div>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="enableErrorRecovery" checked>
                <label class="form-check-label" for="enableErrorRecovery">Habilitar recuperación de errores</label>
              </div>
              <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" id="deviceRotation" checked>
                <label class="form-check-label" for="deviceRotation">Rotación de dispositivos</label>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-primary" id="saveSettingsBtn">Guardar</button>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bootstrap & jQuery Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Socket.io -->
  <script src="/socket.io/socket.io.js"></script>
  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <!-- Custom JS -->
  <script src="/js/dashboard.js"></script>
</body>
</html>

<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="card">
          <div class="card-header bg-danger text-white">
            <h4><i class="fas fa-exclamation-triangle me-2"></i> Error</h4>
          </div>
          <div class="card-body">
            <h5><%= message %></h5>
            <% if (error && error.stack) { %>
              <div class="alert alert-secondary mt-3">
                <pre class="mb-0"><%= error.stack %></pre>
              </div>
            <% } %>
            <div class="mt-4">
              <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-1"></i> Volver al Dashboard
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
